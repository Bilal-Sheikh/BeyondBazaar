generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         Int      @id @default(autoincrement())
    externalId String   @unique
    firstName  String
    lastName   String
    email      String   @unique
    role       String?
    attributes Json
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}

